{
  "name": "test-native-app",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-preset-react-native-stage-0": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-import-resolver-reactnative": "^1.0.2",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.9.1",
    "eslint-plugin-react-native": "^3.2.1",
    "eslint-plugin-standard": "^3.1.0",
    "jest": "^23.2.0",
    "jsdom": "^11.1.0",
    "react-native-mock": "^0.3.1",
    "react-native-mock-render": "0.0.26",
    "react-test-renderer": "^16.3.1",
    "redux-mock-store": "^1.5.1",
    "remote-redux-devtools": "^0.5.12",
    "remotedev-rn-debugger": "^0.8.3"
  },
  "scripts": {
    "start": "react-native start",
    "remotedev": "remotedev-debugger --injectserver",
    "postinstall": "npm run remotedev && rndebugger-open",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "test": "jest --verbose --coverage",
    "test:update": "jest --verbose --coverage --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "test:watch:light": "jest --watch",
    "test:light": "jest --coverage",
    "coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html"
  },
  "eslintIgnore": [
    "src/resources/"
  ],
  "jest": {
    "preset": "react-native",
    "setupTestFrameworkScriptFile": "./setupTests.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-navigation)/",
      "/node_modules/(?!native-base)/"
    ]
  },
  "remotedev": {
    "hostname": "localhost",
    "port": 5678
  },
  "dependencies": {
    "native-base": "^2.6.1",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-native": "^0.55.4",
    "react-native-device-detection": "^0.2.0",
    "react-navigation": "^2.2.3",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-saga": "^0.16.0",
    "redux-thunk": "^2.3.0",
    "remotedev-server": "^0.2.4"
  }
}
